<!-- include header -->
<%- include('../layout/_header') %>
<!-- /include header -->

<div class="container">
  <div class="row">
    <div class="col-12">
      <a href="/" class="btn btn-outline-primary"><i class="fas fa-caret-left"></i>&nbsp;Back home</a>
    </div>
  </div>
  <div class="row">
    <div class="col-12 text-center">
      <h1>Edit User</h1>
      <p class="text-muted text-small">Use the below form to edit current user</p>
    </div>
  </div>
  <div class="row">
    <!-- start:: edit-user FORM -->
    <form class="row g-3 edit-user" id="edit-user" method="POST">
      <input type="hidden" name="hidden_id" value="<%= user._id %>" />
      <!-- Firstname -->
      <div class="col-md-6">
        <label for="firstname" class="form-label">Firstname*</label>
        <input
          type="text"
          class="form-control"
          id="firstname"
          name="firstname"
          placeholder="enter your firstname"
          value="<%= user.firstname %>"
        />
      </div>

      <!-- Lastname -->
      <div class="col-md-6">
        <label for="lastname" class="form-label">Lastname*</label>
        <input
          type="text"
          class="form-control"
          id="lastname"
          name="lastname"
          placeholder="enter your lastname"
          value="<%= user.lastname %>"
        />
      </div>

      <!-- Email -->
      <div class="col-12">
        <label for="email" class="form-label">Email*</label>
        <input
          type="email"
          class="form-control"
          id="email"
          name="email"
          placeholder="enter yout email"
          value="<%= user.email %>"
        />
      </div>

      <!-- Gender -->
      <div class="col-12">
        <fieldset class="row mb-3">
          <legend class="col-form-label col-sm-1 pt-0">Gender*</legend>
          <div class="col-sm-11">
            <div class="form-check">
              <input class="form-check-input" type="radio" name="gender" id="male" value="male" <%= user.gender == 'male' &&
              'checked' %> />
              <label class="form-check-label" for="male">Male</label>
            </div>
            <div class="form-check">
              <input class="form-check-input" type="radio" name="gender" id="female" value="female" <%= user.gender == 'female' &&
              'checked' %> />
              <label class="form-check-label" for="female">Female</label>
            </div>
          </div>
        </fieldset>
      </div>

      <!-- Status -->
      <div class="col-12">
        <fieldset class="row mb-3">
          <legend class="col-form-label col-sm-1 pt-0">Status*</legend>
          <div class="col-sm-11">
            <div class="form-check">
              <input class="form-check-input" type="radio" name="status" id="active" value="active" <%= user.status == 'active' &&
              'checked' %> />
              <label class="form-check-label" for="active">Active</label>
            </div>
            <div class="form-check">
              <input class="form-check-input" type="radio" name="status" id="inactive" value="inactive" <%= user.status ==
              'inactive' && 'checked' %> />
              <label class="form-check-label" for="inactive">Inactive</label>
            </div>
          </div>
        </fieldset>
      </div>

      <!-- Edit-user btn -->
      <div class="col-12 mb-4">
        <button type="submit" class="btn w-100 edit-user__btn">Edit User</button>
      </div>
    </form>
    <!-- end:: edit-user FORM -->
  </div>
</div>

<!-- include footer -->
<%- include('../layout/_footer') %>
<!-- /include footer -->
